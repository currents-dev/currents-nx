{
  "name": "@currents/nx",
  "version": "2.0.0-beta.0",
  "description": "Currents plugin for Nx",
  "author": "Andrew Goldis",
  "homepage": "https://currents.dev",
  "type": "commonjs",
  "license": "MIT",
  "keywords": [
    "nx",
    "nrwl",
    "Cypress",
    "Currents",
    "Sorry Cypress"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/currents-dev/currents-nx"
  },
  "bugs": {
    "url": "https://github.com/currents-dev/currents-nx/issues"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "compile": "tsc -d",
    "dev": "tsc -d --watch",
    "release": "release-it",
    "clean": "rimraf dist"
  },
  "main": "./index.js",
  "typings": "./index.d.ts",
  "schematics": "./generators.json",
  "builders": "./executors.json",
  "ng-update": {
    "requirements": {},
    "migrations": "./migrations.json"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false,
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "../../CHANGELOG.md"
      }
    }
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "cypress": "^12.9.0",
    "cypress-cloud": "^1.7.0",
    "release-it": "^15.10.1"
  }
}
